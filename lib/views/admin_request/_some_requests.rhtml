<div class="accordion" id="requests">
  <% for info_request in info_requests %>
    <div class="accordion-group">
      <div class="accordion-heading accordion-toggle">
        <%= link_to('<i class="icon-pencil"></i>'.html_safe, request_admin_url(info_request)) %>
        <a href="#request_<%=info_request.id%>" data-toggle="collapse" data-parent="requests">
          <%=info_request.title%>
        </a>
      </div>
      <div id="request_<%=info_request.id%>" class="accordion-body collapse">
        <table class="table table-striped table-condensed">
          <tbody>
	    <tr>
	        <th>Requested by</th>
		<td><%= link_to("#{info_request.user.name}", user_admin_url(info_request.user))%></td>
            </tr>
	    <tr>
	        <th>Made to</th>
                <td><%= link_to("#{info_request.public_body.name}", public_body_admin_url(info_request.public_body)) %></td>
            </tr>

            <% info_request.for_admin_column do | name, value, type | %>
              <tr>
                <td>
                  <b><%=h name %></b>
                </td>
                <td>
                  <% if type == 'datetime' %>
                    <%=I18n.l(value, :format => "%e %B %Y %H:%M:%S")%>
                    (<%=_('{{length_of_time}} ago', :length_of_time => time_ago_in_words(value))%>)
                  <% else %>
                    <%=h value %>
                  <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  <% end %>
</div>
